  "description": "Simple react cron expression generator",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run clean && rollup -c",
    "clean": "rimraf dist || rm -rf dist",
